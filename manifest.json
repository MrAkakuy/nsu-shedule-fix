{
	"manifest_version": 2,

    "name": "NSU Shedule fixes",
    "version": "0.1",
    "description": "Plugin that adds fixes to NSU shedule table",

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "favicons.png"
    },

    "background": {
	    "scripts": ["background.js"],
	    "persistent": false
	},

	"permissions": [
		"storage", "webNavigation", "tabs", "activeTab", "https://table.nsu.ru/group/*"
	],

    "icons": { // Lmao
        "16": "favicons.png",
        "32": "favicons.png",
        "48": "favicons.png",
        "128": "favicons.png"
    }
 }